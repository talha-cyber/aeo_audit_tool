# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=aeo_audit
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/aeo_audit

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:your_redis_password_here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your_redis_password_here@redis:6379/0

# AI Platform API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Application Security
SECRET_KEY=your-very-long-random-secret-key-here-at-least-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn-here
LOG_LEVEL=INFO

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Flower Configuration (Celery monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password_here

# Application Configuration
APP_NAME="AEO Competitive Intelligence Tool"
APP_ENV=production
DEBUG=False

# Rate Limiting (requests per minute)
OPENAI_RATE_LIMIT=50
ANTHROPIC_RATE_LIMIT=100
PERPLEXITY_RATE_LIMIT=20
GOOGLE_AI_RATE_LIMIT=60

# Report Configuration
REPORTS_DIR=/app/reports
REPORTS_RETENTION_DAYS=30

# Security Headers
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com