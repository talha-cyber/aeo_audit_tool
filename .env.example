# -------------------------------------------------------------
# AEO Audit Tool Environment Template
# Copy to .env and customize before running services.
# -------------------------------------------------------------

# Application
APP_NAME="AEO Competitive Intelligence Tool"
APP_ENV=development
SECRET_KEY="change-me"             # Replace in staging/production with a strong random value
ENABLE_DEBUG_ENDPOINTS=false
CORS_ALLOW_ORIGINS="http://localhost:3000"  # Comma-separated list of allowed origins

# Database (Postgres)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=aeo_audit
POSTGRES_SERVER=db
POSTGRES_PORT=5432

# Redis / Celery
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Feature Flags
ENABLE_SECURITY_HEADERS=true
QUESTION_ENGINE_V2=false

# AI Platform API Keys (populate before live usage)
OPENAI_API_KEY=dummy_key
ANTHROPIC_API_KEY=dummy_key
PERPLEXITY_API_KEY=dummy_key
GOOGLE_AI_API_KEY=dummy_key

# Monitoring / Observability
SENTRY_DSN=
TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Rate limiting defaults
OPENAI_RATE_LIMIT=50
ANTHROPIC_RATE_LIMIT=100
PERPLEXITY_RATE_LIMIT=20
GOOGLE_AI_RATE_LIMIT=60
